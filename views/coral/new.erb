<h1>New corals</h1>
<form method="post" action="/coral/new">

  <label for="coral-species">Coral Species: </label>
  <input id="coral-species" type="text" name="species"/>

  <label for="coral-name">Coral Name: ></label>
  <input id="coral-name" type="text" name="name"/>


  <label for="coral-select">Select a Reef: ></label>
  <select id="coral-select"  name="reef_id">
    <% for reef in @reefs %>
      <option value="<%= reef.id %>"> <%= reef.name %> </option>
    <% end %>
